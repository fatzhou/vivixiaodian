/**app.wxss**/
@import "lib/font/iconfont.wxss";
@import "weui.wxss";
@import "reset.wxss";
.ico-add {
  background: url(../res/img/icon_nav_layout.png) no-repeat 0 0;
  width: 24px;
  height: 24px;
  display: inline-block;
  background-size: cover;
}
.ico-reduce {
  background: url(../res/img/icon_nav_layout.png) no-repeat 0 0;
  width: 24px;
  height: 24px;
  display: inline-block;
  background-size: cover;
}
.ico-addprodcut {
  background: url(../res/img/ico-addproduct.png) no-repeat 0 0;
  width: 40px;
  height: 51px;
  display: inline-block;
  background-size: cover;
}
footer {
  background: #fff;
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 53px;
}
footer .weui-tabbar {
  background: none;
  height: 100%;
}
footer .weui-tabbar .weui-tabbar__item {
  padding-top: 0;
}
/*footer*/
.weui-bar__item_on .iconfont-dasan-28:before {
  content: "\e74b";
}
.weui-bar__item_on .iconfont-dasan-30:before {
  content: "\e732";
}
.weui-tabbar__item.weui-bar__item_on .weui-tabbar__icon,
.weui-tabbar__item.weui-bar__item_on .weui-tabbar__icon > view,
.weui-tabbar__item.weui-bar__item_on .weui-tabbar__label {
  color: #f97a4d;
}
.weui-tabbar__icon {
  margin-bottom: 5px;
  font-size:22px;
}
html,
body,
.container {
  height: 100%;
}
.weui-cells__tips a {
  padding-top: 5px;
  padding-bottom: 10px;
  display: inline-block;
  color: #207ddc;
}
.weui-tabbar__item.weui-bar__item_on .weui-tabbar__icon,
.weui-tabbar__item.weui-bar__item_on .weui-tabbar__icon > i,
.weui-tabbar__item.weui-bar__item_on .weui-tabbar__label {
  color: #f97a4d;
}
.weui-btn_primary {
  background-color: #f97a4d;
  border-radius: 32px;
}
.weui-btn_primary:not(.weui-btn_disabled):active {
  background-color: #e18157;
}
#app {
  height: 100%;
}
.container {
  min-height: 100%;
}

.weui-cells_radio .weui-icon-checked:before {
    display: block;
    content: '\EA08';
    color: #09bb07;
    font-size: 16px;
}
