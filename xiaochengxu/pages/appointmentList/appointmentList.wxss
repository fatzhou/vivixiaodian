/*shop-wrap*/
.shop-wrap-bottomgap {
  width: 100%;
  padding-bottom: 50px;
}

.shop-wrap .shop-layer {
  position: relative;
}
.shop-wrap .shop-layer .weui-panel__hd {
  position: fixed;
  width: 110px;
  left: 0;
  top: 0;
  background: #f6f6f6;
  border-right: 1px solid #e5e5e5;
  height: 100%;
  padding: 0;
}
.shop-wrap .shop-layer .weui-panel__hd .weui-media-box {
  height: 44px;
  line-height: 44px;
  position: relative;
  padding: 0 15px;
  margin: 0;
  color: #333;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  font-size: 14px;
}
.shop-wrap .shop-layer .weui-panel__hd .weui-media-box:before {
  left: 0;
}
.shop-wrap .shop-layer .weui-panel__hd .weui-media-box.current {
  background: #fff;
  color: #000;
  width: 111px;
  margin-right: -1px;
}
.shop-wrap .shop-layer .weui-panel__hd:after {
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1px;
  border-bottom: 1px solid #e5e5e5;
  color: #e5e5e5;
  -webkit-transform-origin: 0 100%;
  transform-origin: 0 100%;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}
.shop-wrap .shop-layer .weui-panel__bd {
  width: 100%;
  padding-left: 111px;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
}
.shop-wrap .shop-layer .weui-panel__bd .weui-media-box:before {
  left: 0;
}
.shop-wrap .shop-layer .weui-panel__bd .weui-media-box .weui-media-box__hd {
  width: 64px;
  height: 64px;
}
.shop-wrap .shop-layer .weui-panel__bd .weui-media-box .weui-media-box__bd .weui-media-box__info {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  padding-bottom: 0;
  margin-top: 0;
  font-size: 16px;
  color: #999;
  height: 32px;
  line-height: 32px;
}
.shop-wrap .shop-layer .weui-panel__bd .weui-media-box .weui-media-box__bd .weui-media-box__info span {
  -webkit-box-flex: 1;
  box-flex: 1;
  flex: 1;
  display: block;
}
.shop-wrap .shop-layer .weui-panel__bd .weui-media-box .weui-media-box__bd .weui-media-box__info .price-oper a {
  display: inline-block;
}
.shop-wrap .shop-layer .weui-panel__bd .weui-media-box .weui-media-box__bd .weui-media-box__info .price-oper a i {
  color: #f97a4d;
}
.shop-wrap .shop-layer .weui-panel__bd .weui-media-box .weui-media-box__bd .weui-media-box__info .price-oper span {
  display: inline-block;
  color: #f97a4d;
  margin-left: 5px;
  margin-right: 5px;
}


.yuyue-wrap .shop-wrap .shop-layer .weui-panel__bd {
  padding-left: 0;
}
.yuyue-wrap .shop-wrap .shop-layer .weui-panel__bd .weui-media-box__info .statu {
  font-size: 12px;
  border-radius: 4px;
  background: #1AAD19;
  color: #fff;
  padding: 2px 5px;
}
.yuyue-wrap .shop-wrap .shop-layer .weui-panel__bd .weui-media-box__info .statu.statu-dis {
  color: #fff;
  background: #ccc;
}
.yuyue-wrap .shop-wrap .shop-layer .weui-panel__bd .weui-media-box__info .weui-btn_primary {
  border-radius: 5px;
  font-size: 12px;
}
.yuyue-wrap .weui-msg .weui-msg__desc ul.detail {
  margin-top: 15px;
  text-align: left;
}
.yuyue-wrap .weui-msg .weui-msg__desc ul.detail li {
  position: relative;
  padding-top: 5px;
  padding-bottom: 5px;
}
.yuyue-wrap .weui-msg .weui-msg__desc ul.detail li:after {
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1px;
  border-bottom: 1px solid #D9D9D9;
  color: #D9D9D9;
  -webkit-transform-origin: 0 100%;
  transform-origin: 0 100%;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}