/*shop-wrap*/
.shop-wrap .shop-layer {
  position: relative;
}
.shop-wrap .shop-layer .weui-panel__hd {
  position: fixed;
  width: 110px;
  left: 0;
  top: 0;
  background: #f6f6f6;
  border-right: 1px solid #e5e5e5;
  height: 100%;
  padding: 0;
}
.shop-wrap .shop-layer .weui-panel__hd navigator {
  height: 44px;
  line-height: 44px;
  position: relative;
  padding: 0 15px;
  margin: 0;
  color: #333;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  font-size: 14px;
}
.shop-wrap .shop-layer .weui-panel__hd navigator:before {
  left: 0;
}
.shop-wrap .shop-layer .weui-panel__hd navigator.current {
  background: #fff;
  color: #000;
  width: 111px;
  margin-right: -1px;
}
.shop-wrap .shop-layer .weui-panel__hd:after {
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1px;
  border-bottom: 1px solid #e5e5e5;
  color: #e5e5e5;
  -webkit-transform-origin: 0 100%;
  transform-origin: 0 100%;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}
.shop-wrap .shop-layer .weui-panel__bd {
  width: 100%;
  padding-left: 111px;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
}
.shop-wrap .shop-layer .weui-panel__bd .weui-media-box:before {
  left: 0;
}
.shop-wrap .shop-layer .weui-panel__bd .weui-media-box .weui-media-box__hd {
  width: 64px;
  height: 64px;
}
.shop-wrap .shop-layer .weui-panel__bd .weui-media-box .weui-media-box__bd .weui-media-box__info {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  padding-bottom: 0;
  margin-top: 0;
  font-size: 16px;
  color: #999;
  height: 32px;
  line-height: 32px;
}
.shop-wrap .shop-layer .weui-panel__bd .weui-media-box .weui-media-box__bd .weui-media-box__info text {
  -webkit-box-flex: 1;
  box-flex: 1;
  flex: 1;
  display: block;
}
.shop-wrap .shop-layer .weui-panel__bd .weui-media-box .weui-media-box__bd .weui-media-box__info .price-oper navigator {
  display: inline-block;
}
.shop-wrap .shop-layer .weui-panel__bd .weui-media-box .weui-media-box__bd .weui-media-box__info .price-oper navigator icon {
  color: #f97a4d;
}
.shop-wrap .shop-layer .weui-panel__bd .weui-media-box .weui-media-box__bd .weui-media-box__info .price-oper text {
  display: inline-block;
  color: #f97a4d;
}

/*购物车*/
.shopcar-bar {
  background: #fff;
  position: fixed;
  bottom: 52px;
  width: 100%;
}
.shopcar-bar .weui-cell {
  padding: 0;
}
.shopcar-bar .weui-cell .weui-cell__bd view {
  font-size: 16px;
  text-align: center;
}
.shopcar-bar .weui-cell .weui-cell__ft .weui-btn {
  height: 52px;
  line-height: 52px;
  border-radius: 0;
  width: 100px;
  font-size: 16px;
}
.pro-view {
  background: none;
  overflow: inherit;
}
.pro-view .pro-view-item {
  position: relative;
}
.pro-view .pro-view-item .cancel {
  position: absolute;
  top: 0;
  left:50%;
}
.pro-view .pro-view-item .cancel:after {
  content: "";
  position: absolute;
  top: -21px;
  left: 50%;
  width: 1px;
  height: 20px;
  background: #f97a4d;
}
.pro-view .pro-view-item .cancel icon {
  font-size: 30px;
  position: absolute;
  top: -51px;
  left: 50%;
  -webkit-transform: translateX(-50%);
  transform: translateX(-50%);
  color: #f97a4d;
}
.pro-view .pro-view-item .weui-dialog__hd {
  padding: 0;
}
.pro-view .pro-view-item .weui-dialog__hd .weui-dialog__title {
  display: block;
  background: #f97a4d;
  height: 35px;
  line-height: 35px;
  color: #f4f4f4;
  font-size: 13px;
  text-align: center;
  border-top-left-radius: 14px;
  border-top-right-radius: 14px;
}
.pro-view .pro-view-item .weui-dialog__bd {
  max-height: 350px;
  background: #fff;
  overflow: hidden;
  border-bottom-left-radius: 14px;
  border-bottom-right-radius: 14px;
  padding: 0;
  font-size: 13px;
}
.pro-view .pro-view-item .weui-dialog__bd image {
  width: 100%;
}
.pro-view .pro-view-item .weui-dialog__ft {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background: rgba(255, 255, 255, 0.8);
  border-bottom-left-radius: 14px;
  border-bottom-right-radius: 14px;
  padding-top: 15px;
  padding-bottom: 15px;
}
.pro-view .pro-view-item .weui-dialog__ft:after {
  display: none;
}
.pro-view .pro-view-item .weui-dialog__ft navigator {
  color: #f4f4f4;
  font-size: 13px;
  background: #f97a4d;
  width: 80px;
  border-radius: 25px;
  height: 25px;
  line-height: 25px;
  margin-left: auto;
  margin-right: auto;
  display: inline-block;
}
.pro-view .pro-view-item .weui-dialog__ft navigator icon {
  font-size: 16px;
  color: #f4f4f4;
}
